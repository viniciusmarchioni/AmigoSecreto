<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AmigoSecretoGuest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor">#257E81</item>
    </style>

    <style name="Theme.AmigoSecretoGuest" parent="Base.Theme.AmigoSecretoGuest" />

    <style name="image">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="copy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:src">@drawable/copy_night</item>
        <item name="android:visibility">invisible</item>
        <item name="android:clickable">false</item>
    </style>


    <style name="layout">
        <item name="android:background">@drawable/background_night</item>
    </style>


    <style name="editTextStyle">
        <item name="android:textColorHint">@color/hintNightColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/edittext_rounded_corners</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>